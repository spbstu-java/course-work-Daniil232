<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursework.controller.Lab4Controller">
   <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

   <Label text="Лабораторная работа 4: Stream API и коллекции" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

   <VBox spacing="5">
      <Label text="Выберите операцию:" style="-fx-font-weight: bold;"/>
      <ComboBox fx:id="operationComboBox" onAction="#onOperationChanged" prefWidth="400"/>
   </VBox>

   <VBox spacing="5">
      <Label text="Входные данные:" style="-fx-font-weight: bold;"/>
      <TextArea fx:id="inputTextArea" prefHeight="80" promptText="Введите данные..."/>
   </VBox>

   <HBox spacing="10">
      <Button fx:id="executeButton" text="Выполнить" style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>
      <Button fx:id="clearButton" text="Очистить все" style="-fx-background-color: #ff9800; -fx-text-fill: white;"/>
   </HBox>

   <VBox spacing="5">
      <Label text="Результат выполнения:" style="-fx-font-weight: bold;"/>
      <TextArea fx:id="outputArea" prefHeight="400" editable="false" style="-fx-control-inner-background: #f5f5f5; -fx-font-family: 'Monospaced';"/>
   </VBox>

   <Button text="Назад в главное меню" onAction="#goBackToMain"/>
</VBox>