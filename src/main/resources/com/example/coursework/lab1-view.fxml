<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursework.controller.Lab1Controller">
   <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

   <Label text="Лабораторная работа 1: Паттерн Стратегия" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

   <HBox spacing="10" alignment="CENTER_LEFT">
      <Label text="Имя героя:"/>
      <TextField fx:id="heroNameField" text="Герой" promptText="Введите имя героя" prefWidth="150"/>
      <Label text="Начальная локация:"/>
      <ComboBox fx:id="startLocationComboBox" prefWidth="120"/>
      <Button fx:id="createHeroButton" text="Создать героя"/>
   </HBox>

   <HBox spacing="20">
      <VBox spacing="5">
         <Label text="Текущее местоположение:"/>
         <Label fx:id="currentLocationLabel" text="-" style="-fx-font-weight: bold; -fx-background-color: #e0e0e0; -fx-padding: 5; -fx-pref-width: 150;"/>
      </VBox>
      <VBox spacing="5">
         <Label text="Способ перемещения:"/>
         <Label fx:id="currentStrategyLabel" text="-" style="-fx-font-weight: bold; -fx-background-color: #e0e0e0; -fx-padding: 5; -fx-pref-width: 150;"/>
      </VBox>
   </HBox>

   <HBox spacing="15">
      <VBox spacing="5">
         <Label text="Сменить способ перемещения"/>
         <ComboBox fx:id="strategyComboBox" prefWidth="150"/>
         <Button fx:id="changeStrategyButton" text="Сменить способ" style="-fx-background-color: #ffeb3b;"/>
      </VBox>

      <VBox spacing="5">
         <Label text="Переместиться в локацию"/>
         <ComboBox fx:id="targetLocationComboBox" prefWidth="150"/>
         <Button fx:id="moveButton" text="Переместиться" style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>
      </VBox>
   </HBox>

   <VBox spacing="5">
      <Label text="Журнал событий:"/>
      <TextArea fx:id="outputArea" prefHeight="300" editable="false" style="-fx-control-inner-background: #f5f5f5;"/>
   </VBox>

   <Button text="Назад в главное меню" onAction="#goBackToMain"/>
</VBox>