<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursework.controller.Lab3Controller">
   <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

   <Label text="Лабораторная работа 3: Переводчик" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

   <VBox spacing="5">
      <Label text="Введите текст на английском:" style="-fx-font-weight: bold;"/>
      <TextField fx:id="inputTextField" promptText="Введите текст для перевода..." prefWidth="400"/>
   </VBox>

   <HBox spacing="10">
      <Button fx:id="translateButton" text="Перевести" style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>
      <Button fx:id="clearButton" text="Очистить" style="-fx-background-color: #ff9800; -fx-text-fill: white;"/>
   </HBox>

   <HBox spacing="10" alignment="CENTER_LEFT">
      <Label text="Статус:"/>
      <Label fx:id="statusLabel" text="Готово" style="-fx-font-weight: bold; -fx-text-fill: green;"/>
      <ProgressIndicator fx:id="progressIndicator" visible="false" prefWidth="20" prefHeight="20"/>
   </HBox>

   <VBox spacing="5">
      <Label text="Результат перевода:" style="-fx-font-weight: bold;"/>
      <TextArea fx:id="outputArea" prefHeight="300" editable="false" style="-fx-control-inner-background: #f5f5f5; -fx-font-family: 'Monospaced';"/>
   </VBox>

   <Label text="Подсказка: Введите 'help' для справки, 'exit' для выхода" style="-fx-font-style: italic; -fx-text-fill: #666;"/>

   <Button text="Назад в главное меню" onAction="#goBackToMain"/>
</VBox>